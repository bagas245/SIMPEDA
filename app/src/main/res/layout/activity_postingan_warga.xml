<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostinganWarga">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        />

    <TextView
        android:id="@+id/Postingan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Postingan Warga"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_bold"
        />

    <EditText
        android:id="@+id/plain_text_input"
        android:layout_below="@id/Postingan"
        android:layout_marginTop="50dp"
        android:layout_height="300dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:hint="Upload File Disini"
        android:gravity="center"
        android:inputType="text"/>

    <LinearLayout
        android:id="@+id/BuatButton"
        android:layout_below="@id/plain_text_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/BtnPosting"
            android:layout_below="@+id/JudulLaporan"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginRight="20dp"
            android:text="Tanggapi"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />

        <Button
            android:id="@+id/BtnWadah"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/BtnPosting"
            android:layout_marginLeft="20dp"
            android:text="Laporkan"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            />
    </LinearLayout>

</RelativeLayout>